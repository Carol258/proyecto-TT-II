<div class="container">

    <div class="row">
        <div class="col-8">
            <div class="ratio ratio-16x9">
                <video src="{{url}}" controls autoplay controlslist="nodownload"></video>
            </div>
        </div>
        <div class="col-4">
            <div class="list-group">
                {{#each nameVideos}}
                <a href="/modulesCourse/renderVideo/{{this}}/{{id}}" class="list-group-item list-group-item-action "
                    aria-current="true">{{this}}</a>
                {{/each}}
                {{#if test}}
                <a href="/modulesCourse/test" class="list-group-item list-group-item-action"
                    aria-current="true">Cuestionario</a>
                {{/if}}

                {{#if resourcesModule}}
                    <a href="{{urlSource}}" target="_blank" class="list-group-item list-group-item-action"
                    aria-current="true">Links de recursos</a>
                {{/if}}
            </div>
        </div>
    </div>

</div>