<div class="container mt-3">
    <h1 class="text-center mb-5">Bienvenido {{user.name}} {{user.surname}}</h1>
    <div class="row mb-3">
        {{#each modules}}
        <div class="col-3 mb-3">
            <div class="card border border-3">
                <img src="{{img}}" class="card-img-top" alt="" width="75" height="175">
                <div class="card-body">
                    <h5 class="card-title">{{nameModule}}</h5>
                    <p class="card-text">{{descriptionModule}}</p>
                    <form action="/modulesCourse/showModule/{{id}}">
                        <div class="d-grid gap-3 col-6 mx-auto mb-2">
                        <button class="btn btn-info" type="submit">Comenzar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>